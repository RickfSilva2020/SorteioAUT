<Sorteio>:
    orientation: 'vertical'
    padding: 35
    spacing: 20
    Label:
        text: "DIGITE OS ELEMENTOS DO SORTEIO"
        size_hint_y: None
        height: 70
    BoxLayout:
        size_hint_y: None
        height: 250
        TextInput:
            text: "Digite aqui "
    BoxLayout:
       
        GridLayout:
            cols: 2
            Label:
                text: 'Sortear Sequência'

            CheckBox:
                on_active: root.checkbox_click(self, self.active)

        GridLayout:
            cols: 2
            Label:
                text: 'Sortio Ùnico'

            CheckBox:
                on_active: root.checkbox_click(self, self.active)
